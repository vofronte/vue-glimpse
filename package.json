{
  "publisher": "vofronte",
  "name": "vue-glimpse",
  "displayName": "VueGlimpse",
  "type": "module",
  "version": "0.2.0",
  "description": "Instantly see the origin of your Vue template variables (props, state, etc.) without leaving your HTML.",
  "author": "vofronte",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/vofronte/vue-glimpse/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/vofronte/vue-glimpse.git"
  },
  "bugs": {
    "url": "https://github.com/vofronte/vue-glimpse/issues"
  },
  "galleryBanner": {
    "color": "#228d6a",
    "theme": "dark"
  },
  "keywords": [
    "vue",
    "vue3",
    "nuxt",
    "nuxt3",
    "script setup",
    " vscode",
    "productivity",
    "developer experience",
    "dx",
    "workflow",
    "developer tools",
    "visualization",
    "inline hints",
    "decorators",
    "origin",
    "source",
    "binding",
    "metadata",
    "context",
    "props",
    "ref",
    "reactive",
    "computed",
    "store",
    "emits",
    "lens",
    "peek",
    "glimpse"
  ],
  "categories": [
    "Visualization",
    "Programming Languages"
  ],
  "main": "./out/extension.cjs",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.88.0"
  },
  "activationEvents": [
    "onLanguage:vue"
  ],
  "contributes": {
    "configuration": {
      "title": "VueGlimpse",
      "properties": {
        "vueGlimpse.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enables or disables the VueGlimpse extension."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun package-prod",
    "compile": "vite build",
    "watch": "bun --bun npm-run-all -p watch:*",
    "watch:vite": "vite build --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "vsce package --no-dependencies",
    "package-prod": "vite build --mode production",
    "publish": "vsce publish",
    "check-types": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "release": "bun run package-prod && bun run publish",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@vue/compiler-dom": "^3.5.21",
    "@vue/compiler-sfc": "^3.5.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.18.4",
    "@types/vscode": "^1.88.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.35.0",
    "git-cliff": "^2.10.0",
    "lint-staged": "^16.1.6",
    "npm-run-all2": "^8.0.4",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged",
    "commit-msg": "bunx commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
