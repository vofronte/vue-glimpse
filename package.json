{
  "name": "vue-glimpse",
  "displayName": "Vue Glimpse",
  "type": "module",
  "version": "0.0.1",
  "description": "Instantly see the origin of your Vue template variables (props, state, etc.) without leaving your HTML.",
  "categories": [
    "Other"
  ],
  "main": "./out/extension.cjs",
  "engines": {
    "vscode": "^1.104.0"
  },
  "activationEvents": [
    "onLanguage:vue"
  ],
  "contributes": {
    "configuration": {
      "title": "Vue Glimpse",
      "properties": {
        "vueGlimpse.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enables or disables the Vue Glimpse extension."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm package",
    "compile": "vite build",
    "watch": "npm-run-all -p watch:*",
    "watch:vite": "vite build --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "vite build --mode production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vscode-test"
  },
  "dependencies": {
    "@vue/compiler-dom": "^3.5.21",
    "@vue/compiler-sfc": "^3.5.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.18.3",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.35.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "vite": "^5.4.20"
  }
}
