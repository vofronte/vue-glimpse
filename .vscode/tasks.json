{
  "version": "2.0.0",
  "tasks": [
    // Watch task - orchestrates other tasks
    {
      "label": "watch",
      "dependsOn": [
        "watch:vite",
        "watch:tsc"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    },

    // Vite watch task
    {
      "label": "watch:vite",
      "type": "npm",
      "script": "watch:vite",
      "isBackground": true,
      "problemMatcher": "$esbuild-watch",
      "presentation": {
        "group": "watchers",
        "reveal": "silent"
      }
    },

    // TSC watch task
    {
      "label": "watch:tsc",
      "type": "npm",
      "script": "watch:tsc",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "clear": true,
        "group": "watchers",
        "reveal": "silent"
      }
    }
  ]
}
